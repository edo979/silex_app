{% extends 'admin/layout.twig' %}

{% block main %}
<h2>Articles in the database</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>title</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      {% for article in articles %}
        <tr>
          <td>{{loop.index}}</td>
          <td><a href="/admin/article/{{article.id|e}}">{{article.title|e}}</a></td>
          <td>Edit</td>
          <td>Delete</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}

