{% extends 'admin/layout.twig' %}

{% block main %}
  <h2>Articles in the database
    <a href="/admin/articles/new">
      <button type="button" class="btn btn-success pull-right">
        <span class="glyphicon glyphicon-plus"> New</span>
      </button>
    </a>
  </h2>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>title</th>
        <th>Edit/Delete</th>
      </tr>
    </thead>
    <tbody>
      {% for article in articles %}
        <tr>
          <td>{{loop.index}}</td>
          <td>{{article.title|e}}</td>
          <td>
            <a href="/admin/article/{{article.id|e}}"><span class="glyphicon glyphicon-pencil"></span>&nbsp &nbsp|&nbsp &nbsp</a>
            <a href="/admin/article/delete/{{article.id|e}}"><span class="glyphicon glyphicon-trash"></span></a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}

