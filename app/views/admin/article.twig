{% extends 'admin/layout.twig' %}

{% block headerScripts %}
  {{ parent() }}
  <script type="text/javascript" src="/js/tinymce/tinymce.min.js"></script>
  <script type="text/javascript">
    tinymce.init({
      height: "350",
      selector: "textarea",
      language: "bs",
      menu: 'false',
      plugins: "wordcount save",
      toolbar: " undo redo | | save cancel | bold italic underline | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent |  removeformat",
      save_enablewhendirty: true,
      save_onsavecallback: function() {console.log("Save");}
    });
  </script>
{% endblock %}

{% block main %}
  <form method="post" role="form">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" name="title" class="form-control" id="title" value="{{ article.title|e }}">
    </div>
    <div class="form-group">
      <label for="body">Body</label>
      <textarea class="form-control" name="body" id="body">{{ article.body|e }}</textarea>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
{% endblock %}


